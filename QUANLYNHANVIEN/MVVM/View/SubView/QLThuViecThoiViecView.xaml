<UserControl x:Class="QuanLyNhanVien.MVVM.View.SubView.QLThuViecThoiViecView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyNhanVien.MVVM.View.SubView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox Header="Quản lý nhân viên thử việc"
                      BorderThickness="0"
                      FontSize="17"
                      FontWeight="SemiBold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                    FontWeight="Normal"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="150" Height="40"
                            x:Name="btnThemNhanVien"
                            Click="btnThemNhanVien_Click">Thêm nhân viên</Button>
                    <Button Grid.Column="1" 
                    FontWeight="Normal"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="150" Height="40">Xóa nhân viên</Button>
                    <Button Grid.Column="2"
                    FontWeight="Normal"
                            x:Name="btnSuaNhanVien"
                            Click="btnSuaNhanVien_Click"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="150" Height="40">Sửa nhân viên</Button>
                    <Button Grid.Column="3"
                    FontWeight="Normal"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="150" Height="40">Xem chi tiết</Button>
                    
                </Grid>
                <Grid Grid.Row="1">
                    <DataGrid Margin="10,10,10,20">

                    </DataGrid>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Header="Quản lý nhân viên thôi việc"
                  Grid.Row="1"
                      BorderThickness="0"
                      FontSize="17"
                      FontWeight="SemiBold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Grid.ColumnSpan="2"
                    FontWeight="Normal"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="200" Height="40">Xóa nhân viên</Button>
                    <Button Grid.Column="2"
                            Grid.ColumnSpan="2"
                    FontWeight="Normal"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="200" Height="40">Xem chi tiết</Button>
                    
                </Grid>

                <Grid Grid.Row="1">
                    <DataGrid Margin="10,10,10,20">
                        
                    </DataGrid>
                </Grid>
            </Grid>
            
        </GroupBox>

    </Grid>
</UserControl>
