<UserControl x:Class="QuanLyNhanVien.MVVM.View.ChamCongSubView.KhenThuongKyLuatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyNhanVien.MVVM.View.ChamCongSubView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Header="Thông tin khen thưởng"
                  FontSize="14"
                  FontWeight="SemiBold"
                  BorderThickness="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="1" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Mã khen thưởng" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Tiền khen thưởng" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Lý do" TextAlignment="Right" VerticalAlignment="Center"/>
                
                <TextBox Style="{StaticResource InputTextBox}" Grid.Column="1" Grid.Row="1"/>
                <TextBox Style="{StaticResource InputTextBox}" Grid.Column="1" Grid.Row="2"/>
                <TextBox Style="{StaticResource InputTextBox}" Grid.Column="1" Grid.Row="3"/>

            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="1"
                  Header="Thông tin kỷ luật"
                  FontSize="14"
                  FontWeight="SemiBold"
                  BorderThickness="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="1" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Mã kỷ luật" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Tiền kỷ luật" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Lý do" TextAlignment="Right" VerticalAlignment="Center"/>

                <TextBox Style="{StaticResource InputTextBox}" Grid.Column="1" Grid.Row="1"/>
                <TextBox Style="{StaticResource InputTextBox}" Grid.Column="1" Grid.Row="2"/>
                <TextBox Style="{StaticResource InputTextBox}" Grid.Column="1" Grid.Row="3"/>

                </Grid>
        </GroupBox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Mới</Button>
            <Button Grid.Column="1"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Thêm</Button>
            <Button Grid.Column="2" 
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Xóa</Button>
            <Button Grid.Column="3"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Sửa</Button>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Mới</Button>
            <Button Grid.Column="1"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Thêm</Button>
            <Button Grid.Column="2" 
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Xóa</Button>
            <Button Grid.Column="3"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="70" Height="40">Sửa</Button>

        </Grid>

        <DataGrid Grid.Row="2"
                  Margin="5,5,5,5">

        </DataGrid>

        <DataGrid Grid.Column="1" Grid.Row="2"
                  Margin="5,5,5,5">

        </DataGrid>
    </Grid>
</UserControl>
